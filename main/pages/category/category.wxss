.categoryitem {
  width: 25%;
  height: 300px;
  float: left;
}

.categoryitem .item {
  min-height: 400px;
  background: #f8f8f8;
}

.categoryitem .item view {
   margin: 12px 0 0 0;
  text-align: center;
  height: 38px;
  width: 100%;
  line-height: 38px;
  font-size: 15px;
  color: #333;
}

.categoryitem .item view.con {
 background: #fff;
  color: #e93b3d;
}

.contentItem {
  width: 75%;
  height: 300px;
  float: left;
}

.content {
  width: 12rem;
  margin: 0 auto;
  display: block;
  background: #fff;
}
.second-sub-category {
    margin-right: -.1rem;
}
.category-item {
    float: left;
    width: 5.8rem;
    height: 8.8rem;
    margin: 1 .1rem .16rem 0;
    text-align: center;
    overflow: hidden;
}
.category-item a{
    color: #000;
text-align: center;
font-size:10px;
}
.category-item-logo {
    display: block;
    margin: .32rem auto;
    width: 4.28rem;
    height: 4.28rem;
}

.category-item-title{
  font-size:13px;
}
